<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="famousMedia" type="org.iflab.wecenterandroid.viewmodal.ExploreViewModal"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/text_secondary_light"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_famous"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:fm_avatar="@{famousMedia.FMAvatar}"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@{famousMedia.FMName}"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/image_famous"
                android:layout_toEndOf="@+id/image_famous"
                />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="@{famousMedia.FMDesc}"
                android:layout_below="@+id/tv_name"
                android:layout_alignStart="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_article_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_desc"
                android:layout_alignStart="@+id/tv_desc"
                android:layout_marginTop="5dp"
                android:text="@{famousMedia.FMArticleCount}"
                />

            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@{famousMedia.FMFansCount}"
                android:layout_alignTop="@+id/tv_article_count"
                android:layout_toEndOf="@+id/tv_article_count" />

            <CheckBox
                android:id="@+id/checkbox_focus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_foucus"
                android:button="@null"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>